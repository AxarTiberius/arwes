{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@arwes/*": ["packages/*/src"],
      "@repository/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "static",
    "public"
  ]
}
